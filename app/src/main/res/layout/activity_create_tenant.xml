<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CreateTenantActivity">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Tenants"
            android:background="@color/red"
            app:titleTextColor="@color/white"
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/back_btn"/>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="16sp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/p_home_name"
            app:startIconTint="@color/red"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenant Name"
                android:inputType="text"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/T_Name"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/t_mobileno"
            app:startIconTint="@color/red"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="number"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/T_MobileNummber"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/p_home_name"
            app:startIconTint="@color/green"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Members"
                android:inputType="number"

                android:fontFamily="@font/roboto_black"
                android:id="@+id/Members"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:backgroundTint="@color/red"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto_black"
            android:id="@+id/T_AddMembers"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="gone"
            android:id="@+id/LL_AddMembers"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Members"
                android:textColor="@color/red"
                android:textSize="22dp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:layout_marginTop="10sp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/m_name"
                app:startIconTint="@color/red"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Member Name"
                    android:inputType="text"
                    android:fontFamily="@font/roboto_black"
                    android:id="@+id/Member_Name"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/t_address"
                app:startIconTint="@color/red"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text"
                    android:fontFamily="@font/roboto_black"
                    android:id="@+id/Member_Address"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/t_mobileno"
                app:startIconTint="@color/red"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MobileNumber"
                    android:inputType="number"
                    android:fontFamily="@font/roboto_black"
                    android:id="@+id/Member_MobileNumber"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="#D81B60"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textColor="@color/white"
                android:text="Submit"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/Tenant_Submit"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>