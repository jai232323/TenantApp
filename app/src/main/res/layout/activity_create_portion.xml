<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CreatePortionActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Add Portion"
        android:background="@color/red"
        app:titleTextColor="@color/white"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/back_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/p_home_name"
            app:startIconTint="@color/red"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Portion Name"
                android:inputType="text"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/P_Name"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/p_floor"
            app:startIconTint="@color/red"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Portion Floor"
                android:inputType="text"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/P_Floor"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/p_eb"
            app:startIconTint="@color/red"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Portion_EB Card"
                android:inputType="text"
                android:fontFamily="@font/roboto_black"
                android:id="@+id/P_EBCard"/>

        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/Building"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dialog" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="ADD"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="100dp"
            android:textSize="20sp"/>


    </LinearLayout>

</LinearLayout>